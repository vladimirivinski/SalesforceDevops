{
  "plugins": ["@salesforce/eslint-plugin-aura"],
  "extends": [
    "@salesforce/eslint-config-lwc/recommended",
    "plugin:@salesforce/eslint-plugin-aura/recommended"
  ],
  "rules": {
    "vars-on-top": "off",
    "no-unused-expressions": "off"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        "@lwc/lwc/no-unexpected-wire-adapter-usages": "off"
      }
    }
  ]
}
